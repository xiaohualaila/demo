<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp10"
    android:background="@color/white"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp30"
        android:background="@color/white"
        android:layout_margin="@dimen/dp10">
        <View
            android:id="@+id/view1"
            android:layout_width="3dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:background="@color/blue"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/view1"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:text="技能热度排行"
            android:textColor="@color/text_"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/my_bg"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp10">
        <ImageView
            android:id="@+id/iv_1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/pai_1"
            android:layout_marginRight="@dimen/dp10"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_1"
            android:layout_alignParentTop="true"
            android:textColor="@color/black"
            android:text="智能音箱"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_1"
            android:layout_centerInParent="true"
            android:textSize="12sp"
            android:text="好灯泡祝您胜利"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_1"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="热度条"/>
            <View
                android:layout_width="@dimen/dp20"
                android:layout_height="5dp"
                android:background="@drawable/hot_red_progress"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_alignParentBottom="true"/>
        </LinearLayout>


    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/my_bg"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp10">
        <ImageView
            android:id="@+id/iv_2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/pai_2"
            android:layout_marginRight="@dimen/dp10"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_2"
            android:layout_alignParentTop="true"
            android:textColor="@color/black"
            android:text="智能体重秤"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_2"
            android:textSize="12sp"
            android:layout_centerInParent="true"
            android:text="您的健康管理专家"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_2"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="热度条"/>
            <View
                android:layout_width="@dimen/dp30"
                android:layout_height="5dp"
                android:background="@drawable/hot_blue_progress"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_alignParentBottom="true"/>
        </LinearLayout>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/my_bg"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp10">
        <ImageView
            android:id="@+id/iv_3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/pai_3"
            android:layout_marginRight="@dimen/dp10"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_3"
            android:layout_alignParentTop="true"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:text="智能椅子"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_3"
            android:layout_centerInParent="true"
            android:text="多喝水更健康"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_3"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="热度条"/>
            <View
                android:layout_width="@dimen/dp50"
                android:layout_height="5dp"
                android:background="@drawable/hot_green_progress"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_alignParentBottom="true"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>