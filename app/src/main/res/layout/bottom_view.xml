<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <TextView
        android:id="@+id/iv_home_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/iv_yuyin"
        android:textColor="@color/colorPrimary"
        android:drawableTop="@drawable/home_"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintVertical_chainStyle="spread"
        android:text="智选"/>
    <ImageView
        android:id="@+id/iv_yuyin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/iv_home_text"
        app:layout_constraintRight_toLeftOf="@+id/iv_my_text"
        app:layout_constraintTop_toTopOf="@+id/iv_home_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_chainStyle="spread"
        android:layout_centerInParent="true"
        android:src="@drawable/voice"/>
    <TextView
        android:id="@+id/iv_my_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/iv_yuyin"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_home_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_chainStyle="spread"
        android:drawableTop="@drawable/my"
        android:textColor="@color/tab_bg"
        android:text="我的"/>
</android.support.constraint.ConstraintLayout>


